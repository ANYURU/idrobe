{
  "name": "idrobe",
  "private": true,
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "web",
    "shared"
  ],
  "scripts": {
    "preinstall": "node scripts/use-node-version.js",
    "dev": "node scripts/use-node-version.js npm run dev --workspace=web",
    "dev:build": "node scripts/use-node-version.js npm run build --workspace=web",
    "build": "npm run build --workspace=web",
    "db:start": "npx supabase start",
    "db:stop": "npx supabase stop",
    "db:reset": "npx supabase db reset"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "supabase": "^2.51.0"
  }
}
